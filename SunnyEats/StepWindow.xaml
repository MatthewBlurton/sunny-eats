<Window x:Class="SunnyEats.StepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SunnyEats"
        mc:Ignorable="d"
        Title="StepWindow"
        Width="320" Height="240"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Step Information" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbxDescription" Margin="10,41,10,35" TextWrapping="Wrap" Text="{Binding Path=Description, Mode=OneTime}" MaxLength="1000" VerticalScrollBarVisibility="Auto" />
        <Button x:Name="btnAdd" Content="Add" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" Click="BtnAdd_Click"/>
        <Button Content="Cancel" Margin="0,0,90,10" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
